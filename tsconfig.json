{
  "compilerOptions": {
    "rootDir": "packages",
    "composite": true,
    "outDir": "dist",
    "target": "ES2022",
    "lib": [
      "DOM",
      "WebWorker",
      "ES2022",
    ],

    "isolatedModules": true,
    "alwaysStrict": true,
    "strict": true,
    "skipLibCheck": true,
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "noErrorTruncation": true,
    "resolveJsonModule": true
  }
}