{
  "compilerOptions": {
    "rootDir": "packages",
    "declaration": true,
    "outDir": "dist",
    "target": "ES2022",
    "lib": [
      "DOM",
    ],
    "isolatedModules": true,
    "alwaysStrict": true,
    "strict": true,
    "skipLibCheck": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "noErrorTruncation": true
  }
}